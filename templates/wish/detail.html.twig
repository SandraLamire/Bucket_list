{% extends 'base.html.twig' %}

{% block title %}
    Wish's Detail
{% endblock %}

{% block body %}
    <h2>Wish's details</h2>
    <div class="wish-details-infos">
        <h2>{{ wish.title }}</h2>
        <div>Category : {{ wish.category.name }}</div>
        <div>Description : {{ wish.description }}</div>
        <div>{{ wish.author ~ ' ~ ' ~ wish.dateCreated | date ('d-m-Y H:i') }}</div>
    </div>
    <div>
        <a href="{{ path('wish_update', {'id' : wish.id}) }}"
        ><button>Update</button></a>
        <a class="link_button" href="{{ path('wish_remove', {'id':wish.id}) }}"
                {# javascript #}
           onclick="return confirm('Are you sure to delete this wish ?')">
        <button type="submit">Delete wish</button></a>
    </div>


{% endblock %}
{% block styleCss %}
    <style>
        body {
            background-image: linear-gradient(60deg, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.5)),
            url("{{ asset('img/index.png') }}");
        }
    </style>
{% endblock %}


